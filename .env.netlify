# Build Environment
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
NODE_OPTIONS=--max-old-space-size=8192

# API Keys - Configure these in Netlify Dashboard
NEXT_PUBLIC_COINMARKETCAP_API_KEY=your_cmc_key_here
NEXT_PUBLIC_HYPERLIQUID_API_KEY=your_hyperliquid_key_here
NEXT_PUBLIC_ELEVENLABS_API_KEY=your_elevenlabs_key_here
NEXT_PUBLIC_COINGECKO_API_KEY=your_coingecko_key_here
NEXT_PUBLIC_BINANCE_API_KEY=your_binance_key_here
NEXT_PUBLIC_BINANCE_SECRET_KEY=your_binance_secret_here

# Security
NEXT_PUBLIC_ADMIN_JWT_SECRET=your_secure_jwt_secret_minimum_32_chars
NEXT_PUBLIC_NEXTAUTH_SECRET=your_nextauth_secret_here
NEXT_PUBLIC_NEXTAUTH_URL=https://your-domain.netlify.app

# Redis (if using)
NEXT_PUBLIC_REDIS_HOST=your_redis_host
NEXT_PUBLIC_REDIS_PORT=6379
NEXT_PUBLIC_REDIS_PASSWORD=your_redis_password

# Domain Configuration
NEXT_PUBLIC_SITE_URL=https://cypherordifuture.xyz