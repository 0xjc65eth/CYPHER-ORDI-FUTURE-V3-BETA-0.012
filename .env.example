UNISAT_API_URL=https://open-api.unisat.io

# OKX API (Ordinals Trading)
OKX_API_KEY=your_okx_api_key_here
OKX_SECRET_KEY=your_okx_secret_key_here
OKX_PASSPHRASE=your_okx_passphrase_here
OKX_API_URL=https://www.okx.com

# Binance API (Price data)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_API_URL=https://api.binance.com

# ===================================================================
# AI & ANALYSIS APIS
# ===================================================================

# OpenAI API (GPT Analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API (AI Analysis)
GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===================================================================
# DATABASE & STORAGE
# ===================================================================

# Supabase (Database & Auth)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Redis (Caching)
REDIS_URL=your_redis_url_here

# ===================================================================
# WALLET & AUTHENTICATION
# ===================================================================

# WalletConnect
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# NextAuth
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://your-deployed-app-url.com

# GitHub OAuth (for auth)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# ===================================================================
# DEPLOYMENT & ENVIRONMENT
# ===================================================================

# Environment
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# App Configuration
NEXT_PUBLIC_APP_URL=https://your-deployed-app-url.com
NEXT_PUBLIC_BITCOIN_NETWORK=mainnet

# Feature Flags
NEXT_PUBLIC_ENABLE_TRADING=true
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_TESTNET=false

# ===================================================================
# SYSTEM CONFIGURATION
# ===================================================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Ports
WS_PORT=8080
METRICS_PORT=9090

# Logging
LOG_LEVEL=info

# Performance
NODE_OPTIONS=--max-old-space-size=8192

# ===================================================================
# DEVELOPMENT ONLY
# ===================================================================

# Development flags (set to false in production)
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_ENABLE_DEV_TOOLS=false